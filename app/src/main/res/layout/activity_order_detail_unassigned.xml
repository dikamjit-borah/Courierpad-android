<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Order_detail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/green"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="70dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Detail"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/order_detail_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:text="# 1234234"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/order_detail_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@drawable/status_card_pending"
            android:paddingLeft="6dp"
            android:paddingTop="2dp"
            android:paddingRight="6dp"
            android:paddingBottom="2dp"
            android:text="Completed"
            android:textColor="@color/mywhite"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-70dp"
        android:background="@drawable/order_detail"
        android:orientation="vertical"
        >

        <LinearLayout
            android:paddingLeft="25dp"
            android:paddingTop="30dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Client Name"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/order_detail_client_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Funghsu Wanghru"
                android:textColor="@color/greenDark"
                android:textSize="16sp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Delivery Address"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/order_detail_order_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4th Avenue Beltola, Assam, India"
                android:textColor="@color/greenDark"
                android:textSize="16sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Reciever Name"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/order_detail_receiver_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gulugulu Singh"
                android:textColor="@color/greenDark"
                android:textSize="16sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Phone No"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/order_detail_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="012345678"
                android:textColor="@color/greenDark"
                android:textSize="16sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Amount"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/order_detail_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500000"
                android:textColor="@color/greenDark"
                android:textSize="16sp"
                />
        </LinearLayout>

        <LinearLayout
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Assign Delivery Agent"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/myblack"
                />

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/add_order_spinner"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/spinner_bg"
                android:spinnerMode="dropdown"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ETA"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/myblack"
                />

            <EditText
                android:focusable="false"
                android:editable="false"
                android:id="@+id/etEta"
                android:background="@drawable/edit_text"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:inputType="date"
                android:paddingLeft="10dp"
                android:textSize="15sp"
                android:textStyle="bold"
                />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bComplete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/button"
                android:text="Assign Order"></Button>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>