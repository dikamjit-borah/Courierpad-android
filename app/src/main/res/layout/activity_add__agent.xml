<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Add_Agent"
    android:padding="15dp"
    android:orientation="vertical"
    >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agent Detail"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="6dp"
        android:textColor="@color/myblack"
        />

    <EditText
        android:id="@+id/add_agent_id"
        android:background="@drawable/edit_text"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:hint="Agent Id"
        android:paddingLeft="10dp"
        android:textSize="15sp"
        android:textStyle="bold"
        />
    <EditText
        android:id="@+id/add_agent_name"
        android:background="@drawable/edit_text"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:hint="Agent Name"
        android:paddingLeft="10dp"
        android:textSize="15sp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/add_agent_dob"
        android:background="@drawable/edit_text"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:inputType="date"
        android:hint="Date of Birth"
        android:paddingLeft="10dp"
        android:textSize="15sp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/add_agent_phone"
        android:background="@drawable/edit_text"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:hint="Phone No"
        android:paddingLeft="10dp"
        android:textSize="15sp"
        android:textStyle="bold"
        />
    <EditText
        android:id="@+id/add_agent_doj"
        android:background="@drawable/edit_text"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:hint="Date Of Joining"
        android:inputType="date"
        android:paddingLeft="10dp"
        android:textSize="15sp"
        android:textStyle="bold"
        />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Assign Agent Credentials"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/myblack"
        />

    <EditText
        android:id="@+id/add_agent_username"
        android:background="@drawable/edit_text"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:hint="Username"
        android:paddingLeft="10dp"
        android:textSize="15sp"
        android:textStyle="bold"
        />
    <EditText
        android:id="@+id/add_agent_password"
        android:background="@drawable/edit_text"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:hint="Password"
        android:paddingLeft="10dp"
        android:textSize="15sp"
        android:textStyle="bold"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/add_agent_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:text="Add Agent"
        android:layout_marginTop="10dp"
        android:textAllCaps="false"
        android:background="@drawable/button"
        android:textColor="@color/white"
        />

</LinearLayout>
</ScrollView>